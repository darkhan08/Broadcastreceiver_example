<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">


    <Button
        android:id="@+id/counterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get caller id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear data"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/counterBtn"
        app:layout_constraintStart_toStartOf="@+id/counterBtn"
        app:layout_constraintTop_toBottomOf="@+id/counterBtn" />

    <TextView
        android:id="@+id/text_caller_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Caller id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_caller_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/text_caller_id_title"
        app:layout_constraintTop_toTopOf="@id/text_caller_id_title" />

    <TextView
        android:id="@+id/text_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Number"
        app:layout_constraintStart_toStartOf="@+id/text_caller_id_title"
        app:layout_constraintTop_toBottomOf="@+id/text_caller_id_title" />

    <TextView
        android:id="@+id/text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/text_number_title"
        app:layout_constraintTop_toTopOf="@id/text_number_title" />

    <TextView
        android:id="@+id/text_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Date call"
        app:layout_constraintStart_toStartOf="@+id/text_number_title"
        app:layout_constraintTop_toBottomOf="@+id/text_number_title" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@id/text_date_title"
        app:layout_constraintStart_toEndOf="@+id/text_date_title" />

    <TextView
        android:id="@+id/text_pickup_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Pickup date"
        app:layout_constraintStart_toStartOf="@+id/text_date_title"
        app:layout_constraintTop_toBottomOf="@+id/text_date_title" />

    <TextView
        android:id="@+id/text_pickup_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@id/text_pickup_date_title"
        app:layout_constraintStart_toEndOf="@+id/text_pickup_date_title" />
    <TextView
        android:id="@+id/text_out_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Out date"
        app:layout_constraintStart_toStartOf="@+id/text_pickup_date_title"
        app:layout_constraintTop_toBottomOf="@+id/text_pickup_date_title" />

    <TextView
        android:id="@+id/text_out_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@id/text_out_date_title"
        app:layout_constraintStart_toEndOf="@+id/text_out_date_title" />


</androidx.constraintlayout.widget.ConstraintLayout>